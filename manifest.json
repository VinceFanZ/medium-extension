{
    "name": "Read Medium for free",
    "description": "Read Medium for free",
    "manifest_version": 2,
    "version": "1.0",
    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    },
    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": ["https://*.com/*"]
    }],
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "16": "icons/16.png"
    }
}